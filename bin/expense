#!/usr/bin/env ruby

require 'expenses/commander'

DATA_FILE_PATH = File.expand_path("~/Dropbox/Data/Archive/Expenses/#{Time.now.year}.json")

case ARGV.shift
when 'edit'
  Expenses::Commander.edit(DATA_FILE_PATH)
when 'add', '+'
  Expenses::Commander.add(DATA_FILE_PATH)
when 'sum'
  Expenses::Commander.sum(DATA_FILE_PATH)
else
  data_lines = Expenses::Commander.parse(DATA_FILE_PATH)
  p data_lines
end
